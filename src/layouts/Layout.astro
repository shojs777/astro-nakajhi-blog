---
import Header from "./components/Header.astro";
import Footer from "./components/Footer.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<html lang="ja" data-theme="emerald">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <Header />
    <div class="py-24 px-6">
      <h2 class="text-center text-6xl font-mono mb-12">{title}</h2>
      <div class="grid grid-cols-4 gap-4 min-h-screen">
        <div class="col-start-1 col-span-1">
          <slot name="aside1" /><!-- ここにサイドバーが挿入される -->
        </div>
        <div class="col-start-2 col-span-2 row-span-full">
          <slot /><!-- ここにコンテンツが挿入される -->
        </div>
        <div class="col-span-1">
          <slot name="aside2" /><!-- ここにサイドバーが挿入される -->
        </div>
      </div>
    </div>
    <Footer />
  </body>
</html>
